<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CategoryTypeTitleStyle">
        <item name="android:fontFamily">@font/muli_extra_bold</item>
        <item name="android:textSize">21dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SplashScreenTextStyle">
        <item name="android:fontFamily">@font/muli_black</item>
        <item name="android:textSize">@dimen/splash_app_name_size</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="HeaderTitleStyle">
        <item name="android:fontFamily">@font/muli_bold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CategoryTypeSubTitleStyle">
        <item name="android:fontFamily">@font/muli_bold</item>
        <item name="android:textSize">14dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="maxLines">1</item>
        <item name="android:textColor">@color/active_gray</item>
    </style>

    <style name="DetailTitleStyle">
        <item name="android:fontFamily">@font/muli_extra_bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DetailDateStyle">
        <item name="android:fontFamily">@font/muli_extra_bold</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/active_gray</item>
    </style>

    <style name="DetailSubTitleStyle">
        <item name="android:fontFamily">@font/muli_extra_bold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DetailContentStyle">
        <item name="android:fontFamily">@font/muli_regular</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white_gray</item>
    </style>

    <style name="DetailTagLineStyle">
        <item name="android:fontFamily">@font/muli_light</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white_gray</item>
    </style>

    <style name="GenreTextStyle">
        <item name="android:fontFamily">@font/muli_regular</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white_gray</item>
    </style>

    <style name="SeasonTitleStyle">
        <item name="android:fontFamily">@font/muli_extra_bold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white_gray</item>
    </style>

    <style name="SeasonContentStyle">
        <item name="android:fontFamily">@font/muli_regular</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/active_gray</item>
    </style>

    <style name="SeasonDateStyle">
        <item name="android:fontFamily">@font/muli_light</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/active_gray</item>
    </style>

    <style name="SeasonEpisodesStyle">
        <item name="android:fontFamily">@font/muli_bold</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/white_gray</item>
    </style>

    <style name="MediaInfoSubTitleStyle">
        <item name="android:fontFamily">@font/muli_bold</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/active_gray</item>
    </style>

    <style name="BigHeaderStyle">
        <item name="android:fontFamily">@font/muli_extra_bold</item>
        <item name="android:textSize">30dp</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DiscoverSearchHintTextStyle">
        <item name="android:fontFamily">@font/muli_regular</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/active_gray</item>
    </style>

    <style name="SubTitleStyle">
        <item name="android:fontFamily">@font/muli_regular</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/active_gray</item>
    </style>

    <style name="DefaultSubTitleStyle">
        <item name="android:fontFamily">@font/muli_regular</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/white_gray</item>
    </style>

    <style name="DefaultContentStyle">
        <item name="android:fontFamily">@font/muli_regular</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/active_gray</item>
    </style>

    <style name="pandoraTabLayoutTheme">
        <item name="tabMaxWidth">0dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="android:textSize">14dp</item>
        <item name="fontFamily">@font/muli_regular</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabTextColor">@color/active_gray</item>
        <item name="tabSelectedTextColor">@color/red</item>
        <item name="tabTextAppearance">@style/tabTextStyle</item>
    </style>

    <style name="tabTextStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="PandoraAlertDialogTheme" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:background">@color/main_bg_color</item>
        <item name="colorAccent">@color/red</item>
        <item name="android:textColor">@color/white_gray</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/red</item>
    </style>

</resources>