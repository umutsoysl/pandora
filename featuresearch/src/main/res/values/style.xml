<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="searchEditTextStyle">
        <item name="android:background">@color/bottom_navigation_bg_color</item>
        <item name="android:hint">@string/search_hint</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17dp</item>
        <item name="maxLines">1</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>

    <style name="searchTabLayoutTheme">
        <item name="tabMaxWidth">0dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="android:textSize">14dp</item>
        <item name="fontFamily">@font/muli_regular</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabTextColor">@color/active_gray</item>
        <item name="tabSelectedTextColor">@color/red</item>
        <item name="tabTextAppearance">@style/tabTextStyle</item>
    </style>

    <style name="tabTextStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">14dp</item>
    </style>

</resources>